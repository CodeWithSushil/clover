{
    "name": "cloverphp/clover",
    "description": "Clover: Clover PHP is a modern, unopinionated, and lightweight Express.js-style framework for PHP.",
    "type": "project",
    "keywords": ["clover","framework"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "amphp/amp": "^3.1",
        "amphp/http-server": "^3.4",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Clover\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sushil Kumar",
            "email": "sushilkumbhar77@gmail.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.25",
        "pestphp/pest": "^4.1"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true
        }
    }
}
